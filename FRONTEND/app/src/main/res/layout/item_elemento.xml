<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp" >

        <TextView
            android:id="@+id/element_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Identificador de elemento"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ID: 101" />

        <TextView
            android:id="@+id/element_description_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/button_toggle_element_actions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/element_id_text_view"
            tools:text="Descripción del Elemento: Teclado mecánico RGB" />

        <ImageButton
            android:id="@+id/button_toggle_element_actions"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Mostrar/ocultar acciones"
            android:src="@drawable/expand_all_24px"
            android:scaleType="fitCenter"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/element_id_text_view"
            app:layout_constraintBottom_toBottomOf="@+id/element_description_text_view"
            app:tint="@color/dark_gray" />

        <LinearLayout
            android:id="@+id/element_action_buttons_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/element_description_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/button_print_code_element"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Imprimir Uni Code"
                android:src="@drawable/print_24px"
                android:scaleType="fitCenter"
                android:padding="8dp"
                app:tint="@color/purple_500"
                tools:ignore="ImageContrastCheck" />

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/button_edit_element"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar elemento"
                android:src="@drawable/border_color_24px"
                android:scaleType="fitCenter"
                android:padding="8dp"
                app:tint="@color/dark_gray"
                tools:ignore="ImageContrastCheck" />

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/button_delete_element"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar elemento"
                android:src="@drawable/delete_24px"
                android:scaleType="fitCenter"
                android:padding="8dp"
                app:tint="@color/red"
                tools:ignore="ImageContrastCheck" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
