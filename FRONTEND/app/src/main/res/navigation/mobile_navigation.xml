<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_inventories">

    <fragment
        android:id="@+id/navigation_inventories"
        android:name="com.example.inventario2025.ui.listaInventorio.InventorioListFragment"
        android:label="Mis Inventarios"
        tools:layout="@layout/inventorio_list" >
        <action
            android:id="@+id/action_inventorioListFragment_to_elementosListFragment"
            app:destination="@id/elementosListFragment" />
    </fragment>

    <fragment
        android:id="@+id/elementosListFragment"
        android:name="com.example.inventario2025.ui.listaElementos.ElementosListFragment"
        android:label="Elementos del Inventario"
        tools:layout="@layout/fragment_elementos_list">
        <argument
            android:name="inventario"
            app:argType="com.example.inventario2025.data.local.entities.Inventario"
            app:nullable="true" />
        <action
            android:id="@+id/action_elementosListFragment_to_cameraScannerFragment"
            app:destination="@id/cameraScannerFragment" />
    </fragment>

    <fragment
        android:id="@+id/detalleElementoFragment"
        android:name="com.example.inventario2025.ui.listaElementos.DetalleElementoFragment"
        android:label="Detalle del Elemento"
        tools:layout="@layout/fragment_detalle_elemento">

        <argument
            android:name="elemento"
            app:argType="com.example.inventario2025.data.local.entities.Elemento"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/cameraScannerFragment"
        android:name="com.example.inventario2025.ui.listaElementos.CameraScannerFragment"
        android:label="Escanear CÃ³digo"
        tools:layout="@layout/fragment_camera_scanner" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.inventario2025.ui.profile.ProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_profile" />
</navigation>
